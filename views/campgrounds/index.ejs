<%- include("../partials/header") %>

<% if (currentUser && currentUser.isAdmin) { %>
  <h1>You are an Admin!</h1>
<% } %>
<header class="jumbotron mb-0">
  <div class="container">
    <h1><i class="fas fa-campground"></i>Welcome To YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new"
        >Add New Campground</a
      >
    </p>
  </div>
</header>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    </ul>
    <form action="/campgrounds" method="GET" class="form-inline">
      <div class="input-group">
        <input 
          class="form-control" 
          type="text" 
          name="search" 
          placeholder="Search Campgrounds..." 
          aria-label="Search">
        
      </div>
      <div class="input-group-append">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          <i class="fas fa-search"></i>
        </button> 
      </div>
      
    </form>
  </div>
</nav>

<div class="row text-center mt-5">
  <% campgrounds.forEach(function(campground) { %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card">
      <img src="<%= campground.image %>" class="card-img-top" alt="Image of camping">
      <div class="card-body">
        <h5 class="card-title">
          <%= campground["name"] %>
        </h5>
      </div>
      <p>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
          More Info
        </a>
      </p>
    </div>
  </div>
  <% }) %>
</div>

<%- include("../partials/footer") %>
